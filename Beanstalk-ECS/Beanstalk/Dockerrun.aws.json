{
    "AWSEBDockerrunVersion": 3,
    "volumes": [
        {
            "name": "nginx-proxy-conf",
            "host": {
                "sourcePath": "/var/app/current/nginx/user_conf.d"
            }
        }
    ],
    "containerDefinitions": [
        {
            "name": "nginx",
            "image": "225050420367.dkr.ecr.us-west-2.amazonaws.com/task:nginx",
            "hostname": "nginx",
            "essential": true,
            "links": [
                "app"
            ],
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "nginx-proxy-conf",
                    "containerPath": "/etc/nginx/user_conf.d",
                    "readOnly": true
                }
            ]
        },
        {
            "name": "app",
            "image": "225050420367.dkr.ecr.us-west-2.amazonaws.com/task:appnew",
            "hostname": "app",
            "essential": false,
            "portMappings": [
                {
                    "containerPort": 3000,
                    "hostPort": 3000
                }
            ]
        }
    ]
}